$TTL 24h
$ORIGIN 168.192.in-addr.arpa.
@           IN      SOA     ns1.homelab.lan. admin.homelab.lan. (
                                1               ; serial number
		                        24h			    ; refresh period
		                        2h			    ; retry period
		                        1000h			; expire time
		                        2d   			; negative TTL
                                )

            IN      NS      ns1.homelab.lan.

$ORIGIN 1.168.192.in-addr.arpa.
; Main VLAN network services
144			IN		PTR		db.homelab.lan.
145         IN      PTR     api.homelab.lan.
146         IN      PTR     host.homelab.lan.
147			IN		PTR		gapi.homelab.lan.
148			IN		PTR		rpg.homelab.lan.
149			IN		PTR		site.homelab.lan.
151			IN		PTR		socket.homelab.lan.
152			IN		PTR		runner.homelab.lan.