FROM ubuntu:22.04

ENV DEBIAN_FRONTEND=noninteractive

# Install required packages
RUN apt-get update && apt-get install -y \
    curl jq git sudo software-properties-common \
    apt-transport-https ca-certificates gnupg lsb-release \
    && rm -rf /var/lib/apt/lists/*

# Install Docker CLI (so runner jobs can use `docker build` etc.)
RUN curl -fsSL https://download.docker.com/linux/ubuntu/gpg | gpg --dearmor -o /usr/share/keyrings/docker.gpg \
    && echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/docker.gpg] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable" \
       > /etc/apt/sources.list.d/docker.list \
    && apt-get update && apt-get install -y docker-ce-cli

# Create runner user, docker group with hostâ€™s GID passed at build
ARG DOCKER_GID=118
RUN groupadd -g ${DOCKER_GID} docker \
    && useradd -m -d /home/runner -u 1000 -g docker -s /bin/bash runner \
    && mkdir -p /home/runner/actions-runner \
    && chown -R runner:docker /home/runner

WORKDIR /home/runner/actions-runner

# Install GitHub Actions runner
ARG RUNNER_VERSION=2.319.1
RUN curl -Ls https://github.com/actions/runner/releases/download/v${RUNNER_VERSION}/actions-runner-linux-x64-${RUNNER_VERSION}.tar.gz \
    | tar xz \
    && ./bin/installdependencies.sh

# Copy entry scripts
COPY runner-entry.sh /runner-entry.sh
COPY entrypoint.sh /entrypoint.sh
RUN chmod +x /runner-entry.sh /entrypoint.sh

# Default entrypoint
ENTRYPOINT ["/entrypoint.sh"]
