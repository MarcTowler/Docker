FROM ubuntu:22.04

# Install base dependencies
RUN apt-get update && apt-get install -y \
    curl jq git iputils-ping sudo unzip \
    libicu70 libkrb5-3 zlib1g libssl3 liblttng-ust1 \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN useradd -m -d /home/runner runner \
    && mkdir -p /home/runner/actions-runner \
    && chown -R runner:runner /home/runner

WORKDIR /home/runner/actions-runner

# Download latest GitHub Actions runner
ARG RUNNER_VERSION=2.319.1
RUN curl -o actions-runner.tar.gz -L https://github.com/actions/runner/releases/download/v${RUNNER_VERSION}/actions-runner-linux-x64-${RUNNER_VERSION}.tar.gz \
    && tar xzf actions-runner.tar.gz \
    && rm actions-runner.tar.gz \
    && chown -R runner:runner /home/runner/actions-runner

COPY entrypoint.sh .

RUN chmod +x entrypoint.sh \
    && chown runner:runner entrypoint.sh

USER runner

ENTRYPOINT ["./entrypoint.sh"]
